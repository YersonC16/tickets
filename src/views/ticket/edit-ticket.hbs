<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>editar aistencia</h3>
        </div>
        <div class="card-body">
            <form action="/tickets/edit/{{ps._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">

         <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{ps.nombre}}" autofocus required>
                </div>
                <div class="form-group">
                    <input type="text" name="documento" class="form-control" placeholder="Documento" value="{{ps.documento}}" autofocus required>
                </div>
                <div class="form-group">
                     <textarea name="problema" class="form-control" placeholder="Problema" cols="20" rows="3" value="{{ps.problema}}" autofocus required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


